<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:id="@+id/recent_list_container"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/default_thumb"
            android:scaleType="centerCrop"
            android:id="@+id/recent_news_image"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginRight="11dp"
            android:textStyle="bold"
            android:id="@+id/recent_news_title"
            android:text="Govt Cannot Track Citizens Using Aadhaar Data As It Is Technically Impossible: UIDAI"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="On August 1, the agency that handles the biometric information told a nine-judge bench of the Supreme Court that the government cannot track or spy on citizens using Aadhaar data as it is technically impossible. Aadhaar naysayers argue that its mandatory all-pervasive nature would make India a totalitarian state as it would give the government"
            android:maxLines="3"
            android:id="@+id/recent_news_brief"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>